{
    "source": {
        "include": ["../src/controllers"],
        "includePattern": ".js$",
        "excludePattern": "(node_modules/|docs)"
    },
    "plugins": [
        "plugins/markdown"
    ],
    "opts": {
        "destination": "./docs",
        "recurse": true
        
    },
    "templates": {
        "cleverLinks": true,
        "monospaceLinks": false,
        "default": {
            "outputSourceFiles": true,
            "includeDate": true
        }
    },
    "tags": {
        "allowUnknownTags": true
    },
    "markdown": {
        "hardwrap": false,
        "idInHeadings": true
    }
}