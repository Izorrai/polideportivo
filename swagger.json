            "application/x-www-form-urlencoded": {
              "schema": {
                "$ref": "#/components/schemas/Instalacion"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Instalación creada exitosamente"
          }
        }
      }
    },
    "/instalaciones/api/actualizar/{id}": {
      "post": {
        "summary": "Actualizar instalación",
        "tags": [
          "Instalaciones"
        ],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "integer"
            }
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/x-www-form-urlencoded": {
              "schema": {
                "$ref": "#/components/schemas/Instalacion"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Instalación actualizada exitosamente"
          }
        }
      }
    },
    "/instalaciones/api/eliminar/{id}": {
      "delete": {
        "summary": "Eliminar instalación",
        "tags": [
          "Instalaciones"
        ],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "integer"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Instalación eliminada exitosamente"
          }
        }
      }
