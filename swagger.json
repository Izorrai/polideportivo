{
  "openapi": "3.0.0",
  "info": {
    "title": "Sports Facility Management API",
    "version": "1.0.0",
    "description": "API for managing sports facilities, classes, reservations, and user accounts"
  },
  "servers": [
    {
      "url": "http://localhost:3001",
      "description": "Development server"
    }
  ],
  "components": {
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    },
    "schemas": {
      "Error": {
        "type": "object",
        "properties": {
          "message": {
            "type": "string"
          }
        }
      },
      "Deporte": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer"
          },
          "nombre": {
            "type": "string"
          }
        }
      },
      "Empleado": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer"
          },
          "nombre": {
            "type": "string"
          }
        }
      },
      "Instalacion": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer"
          },
          "nombre": {
            "type": "string"
          },
          "capacidad": {
            "type": "integer"
          },
          "precio_hora": {
            "type": "number"
          }
        }
      },
      "Inscripcion": {
        "type": "object",
        "properties": {
          "clase_id": {
            "type": "integer"
          },
          "cliente_id": {
            "type": "integer"
          },
          "fecha_inscripcion": {
            "type": "string",
            "format": "date"
          },
          "estado": {
            "type": "string"
          }
        }
      },
      "Reserva": {
        "type": "object",
        "properties": {
          "cliente_id": {
            "type": "integer"
          },
          "instalacion_id": {
            "type": "integer"
          },
          "deporte_id": {
            "type": "integer"
          },
          "fecha": {
            "type": "string",
            "format": "date"
          },
          "hora_inicio": {
            "type": "string",
            "format": "time"
          },
          "hora_fin": {
            "type": "string",
            "format": "time"
          }
        }
      },
      "Usuario": {
        "type": "object",
        "properties": {
          "nombre": {
            "type": "string"
          },
          "apellido": {
            "type": "string"
          },
          "email": {
            "type": "string"
          },
          "telefono": {
            "type": "string"
          },
          "direccion": {
            "type": "string"
          },
          "contrasena": {
            "type": "string"
          }
        }
      },
      "Pago": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer"
          },
          "metodo_pago": {
            "type": "string"
          }
        }
      }
    }
  },
  "paths": {
    "/deportes/api": {
      "get": {
        "summary": "Obtener lista de deportes",
        "tags": [
          "Deportes"
        ],
        "responses": {
          "200": {
            "description": "Lista de deportes obtenida exitosamente",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/Deporte"
                  }
                }
              }
            }
          }
        }
      }
    },
    "/deportes/api/crear": {
      "post": {
        "summary": "Crear nuevo deporte",
        "tags": [
          "Deportes"
        ],
        "responses": {
          "201": {
            "description": "Deporte creado exitosamente"
          }
        }
      }
    },
    "/deportes/api/actualizar/{id}": {
      "put": {
        "summary": "Actualizar deporte existente",
        "tags": [
          "Deportes"
        ],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "integer"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Deporte actualizado exitosamente"
          }
        }
      }
    },
    "/deportes/api/eliminar/{id}": {
      "delete": {
        "summary": "Eliminar deporte",
        "tags": [
          "Deportes"
        ],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "integer"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Deporte eliminado exitosamente"
          }
        }
      }
    },
