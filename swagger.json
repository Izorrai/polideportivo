        ],
        "responses": {
          "200": {
            "description": "Lista de instalaciones disponibles obtenida exitosamente"
          }
        }
      }
    },
    "/instalaciones/api/crear-instalaciones": {
      "post": {
        "summary": "Crear nueva instalación",
        "tags": [
