                }
              }
            }
          }
        }
      }
    },
    "/empleados/crear": {
      "post": {
        "summary": "Crear nuevo empleado",
        "tags": [
          "Empleados"
        ],
        "responses": {
          "201": {
            "description": "Empleado creado exitosamente"
          }
        }
      }
    },
    "/empleados/api/eliminar/{id}": {
      "delete": {
        "summary": "Eliminar empleado",
        "tags": [
          "Empleados"
        ],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "integer"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Empleado eliminado exitosamente"
          }
        }
      }
    },
    "/clases/api/disponibles": {
      "get": {
        "summary": "Obtener clases disponibles",
        "tags": [
          "Clases"
        ],
        "responses": {
          "200": {
            "description": "Lista de clases disponibles obtenida exitosamente"
          }
        }
      }
    },
    "/inscripciones/api/crear": {
      "post": {
        "summary": "Crear nueva inscripción",
        "tags": [
          "Inscripciones"
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/x-www-form-urlencoded": {
              "schema": {
                "$ref": "#/components/schemas/Inscripcion"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Inscripción creada exitosamente"
          }
        }
      }
    },
    "/instalaciones/api": {
      "get": {
        "summary": "Obtener todas las instalaciones",
        "tags": [
          "Instalaciones"
        ],
        "responses": {
          "200": {
            "description": "Lista de instalaciones obtenida exitosamente",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/Instalacion"
                  }
                }
              }
            }
          }
        }
      }
    },
    "/instalaciones/api/disponibles": {
      "get": {
